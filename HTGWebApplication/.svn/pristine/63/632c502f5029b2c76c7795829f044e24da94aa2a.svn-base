/*nutrition library*/


/*search box style*/
.input-group input[type=search] {
    width: 180px;
    box-sizing: border-box;
    border: 2px solid #ccc;
    border-radius: 10px;
    font-size: 16px;
    background-color: white;
    background-size: 20px 20px;
    background-position: 10px 10px; 
    background-repeat: no-repeat;
    padding: 12px 20px 12px 40px;
    -webkit-transition: width 0.4s ease-in-out;
    transition: width 0.4s ease-in-out;
    color: black;
}
input[type=search]:focus { width: 50%; }


/*table head style*/
thead { background-color: tomato; color: white; }
thead tr td a { text-decoration: none; color: white; font-weight: bold; }
thead tr td a:hover { text-decoration: none; color: brown; font-weight: bold; font-size: 1.1em; }
thead tr td:hover { background-color: lightcoral; }


/*table body style*/
tbody tr:nth-child(odd)	{ background-color:#eee; }
tbody tr:nth-child(even)    { background-color:#fff; }


/*side navbar style*/
.w3-sidenav { border-radius: 10px; width:70px; max-height: 230px; }
.calorie-table-icon { font-size:36px;color:white }
.tips-table-icon { font-size:48px;color:white }
.faq-table-icon { font-size:48px;color:white }


/*table body style*/
.table-title { text-align: center; text-shadow: 10px 10px 5px #888888; }
.table-bodies { max-width: 1090px; }


/*Tips table*/
#tips-content { border-style: outset; border-width: thick; border-color: grey; border-radius: 7px; padding: 4px; background-color: #cccccc; }
#tips-btn, #faq-btn { background-color: #ff9966; border-radius: 20px; margin-bottom: 5px; }
#tips-btn-text { font-size: 1.1em; font-weight: bold; }